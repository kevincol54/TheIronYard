%link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", :rel => "stylesheet"}/

%header.navbar.navbar-bright.navbar-fixed-top{:role => "banner"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      
    %nav.collapse.navbar-collapse{:role => "navigation"}
      %ul.nav.navbar-nav
        %li
          %a{:href => "/"} Home
        %li
          =link_to "Music Talk", music_talk_discussions_path
        %li
          =link_to "Tech Talk", tech_talk_discussions_path
        %li
          =link_to "Much Talk", much_talk_discussions_path
        %li
          =link_to "New Discussion", new_discussion_path
        %li
          - if user_signed_in? 
            = link_to('Logout', destroy_user_session_path, :method => :delete)
          - else
            = link_to('Login', new_user_session_path)
      %ul.nav.navbar-right.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.glyphicon.glyphicon-search
          %ul.dropdown-menu{:style => "padding:12px;"}
            %form.form-inline
              %button.btn.btn-default.pull-right{:type => "submit"}
                %i.glyphicon.glyphicon-search
              %input.form-control.pull-left{:placeholder => "Search", :type => "text"}
#masthead
  .container
    .row
      .col-md-7
        %h1
          MUCH Talk
          %h3  
          %p.lead
      .col-md-5
        .well.well-lg
          %h1 where MUsic and teCH Talk collide
          .row
            .col-sm-12
  / /cont
.container
  .row
    .col-md-12
      .top-spacer   
        %h1 #{@discussion.title}
        %hr
        %h3 #{@discussion.content}
        %hr
        = render 'comments/form'
        %ul
          .commentslist
            - @comment.each do |comment|
              = render 'comments/show', comment: comment
